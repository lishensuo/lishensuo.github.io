&lt;/span&gt;&lt;/span&gt;&lt;span style=&#34;display:flex;&#34;&gt;&lt;span&gt;find -name &lt;span style=&#34;color:#0ff;font-weight:bold&#34;&gt;&amp;#39;*.txt&amp;#39;&lt;/span&gt; -exec ls -l {} &lt;span style=&#34;color:#0ff;font-weight:bold&#34;&gt;\;&lt;/span&gt;
&lt;/span&gt;&lt;/span&gt;&lt;span style=&#34;display:flex;&#34;&gt;&lt;span&gt;&lt;span style=&#34;color:#007f7f&#34;&gt;## 返回找到文件的文件名（去除路径）&lt;/span&gt;
&lt;/span&gt;&lt;/span&gt;&lt;span style=&#34;display:flex;&#34;&gt;&lt;span&gt;find -name &lt;span style=&#34;color:#0ff;font-weight:bold&#34;&gt;&amp;#39;*.txt&amp;#39;&lt;/span&gt; -exec basename {} &lt;span style=&#34;color:#0ff;font-weight:bold&#34;&gt;\;&lt;/span&gt;
&lt;/span&gt;&lt;/span&gt;&lt;/code&gt;&lt;/pre&gt;&lt;/td&gt;&lt;/tr&gt;&lt;/table&gt;
